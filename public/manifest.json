{
    "manifest_version": 3,
    "name": "UO Rate My Prof",
    "author": "Cameron Labelle",
    "version": "1.1.0",
    "description": "View professor rankings on the UOZone enrollment page",
    "icons": {
        "64": "icon_64.png"
    },
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": ["https://www.ratemyprofessors.com/*", "https://uo.zone/api/*"],
    "browser_specific_settings": {
        "gecko": {
            "id": "{dc4c7d75-099f-4e43-b077-6333a09869df}"
        }
    },
    "background": {
        "scripts": ["background.js"], 
        "service_worker": "background.js", 
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://www.uocampus.uottawa.ca/*"],
            "js": ["content.js"],
            "css": ["styles.css"],
            "run_at": "document_idle",
            "all_frames": true,
            "match_about_blank": true
        }
    ]
}